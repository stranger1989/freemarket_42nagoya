= render "shared/header"
= render "shared/user_flash_error"
.main-container
  .mypage-container
    .main-column.main-column--user-info
      .main-column__title
        %h2.main-column__title__title 本人情報
      .main-column__form
        = form_for user, url: {action: "update"} do |f|
          .field
            = f.label :lastname, class: "main-column__formlabel" do
              お名前
              %span.required 必須
            = f.text_field :lastname, placeholder: "例) 山田"
            = f.text_field :firstname, placeholder: "例) 彩"
          .field
            = f.label :lastname_kana, class: "main-column__formlabel" do
              お名前カナ
              %span.required 必須
            = f.text_field :lastname_kana, placeholder: "例) ヤマダ"
            = f.text_field :firstname_kana, placeholder: "例) アヤ"
          .field
            = f.label :postalcode, class: "main-column__formlabel" do
              郵便番号
              %span.required 必須
            = f.text_field :postalcode, placeholder: "例) 123-4567"
          .field
            = f.label :prefecture, class: "main-column__formlabel" do
              都道府県
              %span.required 必須
            = f.collection_select :prefecture, JpPrefecture::Prefecture.all, :name, :name, include_blank: true
          .field
            = f.label :city, class: "main-column__formlabel" do
              市区町村
              %span.required 必須
            = f.text_field :city, placeholder: "例) 横浜市緑区"
          .field
            = f.label :block, class: "main-column__formlabel" do
              番地
              %span.required 必須
            = f.text_field :block, placeholder: "例) 青山1-1-1"
          .field
            = f.label :building, class: "main-column__formlabel" do
              建物名
              %span.not-required 任意
            = f.text_field :building, placeholder: "例) 柳ビル103"
          .field.form-birthday
            = f.label :birthday, class: "main-column__formlabel" do
              生年月日
              %span.required 必須
              %br/
            = raw sprintf( f.date_select( :birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year), default: Date.new(1989, 1, 1), date_separator: '%s'),'年 ', '月 ') + '日'
          .field
            = f.label :phone_number, class: "main-column__formlabel" do
              携帯電話の番号
              %span.required 必須
            = f.text_field :phone_number, autocomplete: "email", placeholder: "例) 09012345678"
          .actions
            = f.submit "変更する", class: "btn-summit-edituser"

    = render 'shared/side-bar'

.app-banner

= render 'shared/footer'

= render 'shared/sell_btn'
