= render "shared/header"
= render "shared/user_flash_error"
.main-container
  .mypage-container
    .main-column.main-column--user-info
      .main-column__title
        %h2.main-column__title__title プロフィール
      = form_for user, url: {action: "update"} do |f|
        .user-icon.user-icon--user-info
          =image_tag("mypage_logo.png", alt: "user-icon", class: "user-icon__image", style: "vertical-align:bottom")
          = f.text_field :nickname, class: "user-icon__nickname"
        = f.text_area :profile, class: "user-icon__profile"
        = f.submit "変更する", class: "btn-summit-edituser"

    = render 'shared/side-bar'

.app-banner

= render 'shared/footer'

= render 'shared/sell_btn'
