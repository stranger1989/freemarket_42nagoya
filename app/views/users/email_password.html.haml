= render "shared/header"
= render "shared/user_flash_error"
.main-container
  .mypage-container
    .main-column.main-column--user-info
      .main-column__title
        %h2.main-column__title__title メール/パスワード
      .main-column__form
        = form_for user, url: {action: "update"} do |f|
          .field
            = f.label :email, class: "main-column__formlabel" do
              メールアドレス
              %span.required 必須
            = f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
          .field
            = f.label :current_password, class: "main-column__formlabel" do
              現在のパスワード
            = f.password_field :current_password, autocomplete: "current-password", placeholder: "6文字以上"
          .field
            = f.label :password, class: "main-column__formlabel" do
              パスワード
              %span.required 必須
            = f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上"
          .field
            = f.label :password_confirmation, class: "main-column__formlabel" do
              パスワード（確認）
              %span.required 必須
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上"
          .actions
            = f.submit "変更する", class: "btn-summit-edituser"

    = render 'shared/side-bar'

.app-banner

= render 'shared/footer'

= render 'shared/sell_btn'
