.single-main
  .login--information
    .login__head-inner
      %h2.innertitle 住所入力
    .login--information__form-inner
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .field
          = f.label :lastname, class: "user-registration-label" do
            お名前
            %span.required 必須
          = f.text_field :lastname, placeholder: "例) 山田"
          = devise_error_messages :lastname
          = f.text_field :firstname, placeholder: "例) 彩"
          = devise_error_messages :firstname
        .field
          = f.label :lastname_kana, class: "user-registration-label" do
            お名前カナ
            %span.required 必須
          = f.text_field :lastname_kana, placeholder: "例) ヤマダ"
          = devise_error_messages :lastname_kana
          = f.text_field :firstname_kana, placeholder: "例) アヤ"
          = devise_error_messages :firstname_kana
        .field
          = f.label :postalcode, class: "user-registration-label" do
            郵便番号
            %span.required 必須
          = f.text_field :postalcode, placeholder: "例) 123-4567"
          = devise_error_messages :postalcode
        .field
          = f.label :prefecture, class: "user-registration-label" do
            都道府県
            %span.required 必須
          = f.collection_select :prefecture, JpPrefecture::Prefecture.all, :name, :name, include_blank: true
          = devise_error_messages :prefecture
        .field
          = f.label :city, class: "user-registration-label" do
            市区町村
            %span.required 必須
          = f.text_field :city, placeholder: "例) 横浜市緑区"
          = devise_error_messages :city
        .field
          = f.label :block, class: "user-registration-label" do
            番地
            %span.required 必須
          = f.text_field :block, placeholder: "例) 青山1-1-1"
          = devise_error_messages :block
        .field
          = f.label :building, class: "user-registration-label" do
            建物名
            %span.not-required 任意
          = f.text_field :building, placeholder: "例) 柳ビル103"
        .field.form-birthday
          = f.label :birthday, class: "user-registration-label" do
            生年月日
            %span.required 必須
            %br/
          = raw sprintf( f.date_select( :birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year), default: Date.new(1989, 1, 1), date_separator: '%s'),'年 ', '月 ') + '日'
          = devise_error_messages :birthday
        .field
          = f.label :phone_number, class: "user-registration-label" do
            携帯電話の番号
            %span.required 必須
          = f.text_field :phone_number, autocomplete: "email", placeholder: "例) 09012345678"
          = devise_error_messages :phone_number
        .actions
          = f.submit "次へ進む", class: "btn-summit"
