.single-main
  .login--infomation
    .login__head-inner
      %h2 会員情報入力
    .login--infomation__form-inner
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .field
          = f.label :nickname do
            ニックネーム
            %span.required 必須
          = f.text_field :nickname, placeholder: "例) メルカリ太郎"
          = devise_error_messages :nickname
        .field
          = f.label :email do
            メールアドレス
            %span.required 必須
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可"
          = devise_error_messages :email
        .field
          = f.label :password do
            パスワード
            %span.required 必須
          = f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上"
          = devise_error_messages :password
        .field
          = f.label :password_confirmation do
            パスワード（確認）
            %span.required 必須
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上"
          = devise_error_messages :password_confirmation
        .field
          = f.label :phone_number do
            携帯電話の番号
            %span.required 必須
          = f.text_field :phone_number, autofocus: true, autocomplete: "email", placeholder: "例) 09012345678"
          = devise_error_messages :phone_number
        .field
          = f.label :lastname do
            お名前
            %span.required 必須
          = f.text_field :lastname, placeholder: "例) 山田"
          = devise_error_messages :lastname
          = f.text_field :firstname, placeholder: "例) 彩"
          = devise_error_messages :firstname
        .field
          = f.label :lastname_kana do
            お名前カナ
            %span.required 必須
          = f.text_field :lastname_kana, placeholder: "例) ヤマダ"
          = devise_error_messages :lastname_kana
          = f.text_field :firstname_kana, placeholder: "例) アヤ"
          = devise_error_messages :firstname_kana
        .field
          = f.label :postalcode do
            郵便番号
            %span.required 必須
          = f.text_field :postalcode, placeholder: "例) 123-4567"
          = devise_error_messages :postalcode
        .field
          = f.label :prefecture do
            都道府県
            %span.required 必須
          = f.collection_select :prefecture, JpPrefecture::Prefecture.all, :name, :name, include_blank: true
          = devise_error_messages :prefecture
        .field
          = f.label :city do
            市区町村
            %span.required 必須
          = f.text_field :city, placeholder: "例) 横浜市緑区"
          = devise_error_messages :city
        .field
          = f.label :block do
            番地
            %span.required 必須
          = f.text_field :block, placeholder: "例) 青山1-1-1"
          = devise_error_messages :block
        .field
          = f.label :building do
            建物名
            %span.not-required 任意
          = f.text_field :building, placeholder: "例) 柳ビル103"
        .field.form-birthday
          = f.label :birthday do
            生年月日
            %span.required 必須
            %br/
          = raw sprintf( f.date_select( :birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year), default: Date.new(1989, 1, 1), date_separator: '%s'),'年 ', '月 ') + '日'
          = devise_error_messages :birthday
        .field
          = f.label :payment do
            支払い方法
            %span.required 必須
          = f.select :payment, [["クレジットカード払い", "credit"], ["その他", "other"]],  prompt: "選択してください"
          = devise_error_messages :payment
        .actions
          = f.submit "次へ進む", class: "btn-summit"
